<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
     <tbody>
         <% @book.each do |book| %>
      <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to "Show",book_path(book) %></td>
         <td><%= link_to "Edit",edit_book_path(book.id) %></td>
         <td><%= link_to "Destroy",book_path(book.id),method: :delete %></td>
                 
       </tr>
       <% end %>
      </tbody>
     </table>

<div class="new-book-field"></div>
<h3>New book</h3>
<%= form_with model:@books,local:true do |f| %>
<% if @books.errors.any? %>
  <%= @books.errors.count %>件のエラーが発生しました
  <% @books.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

 <label for="book_body">title</label>
  <div class="field">
    <%= f.text_field :title %>
  </div>

 <label for="book_body">body</label>
  <div class="field">
   <%= f.text_area :body %>
   </div>

<div class="actions">
    <%= f.submit "Create Book" %>
  </div>
 <% end %>
</div>